<!DOCTYPE html>
<html>

<head lang="en">
  <meta charset="UTF-8">
  <meta content="text/html;charset=utf-8" http-equiv="Content-Type">


  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <link rel="shortcut icon" href="../assets/favicon.png" type="image/x-icon">

  <link rel="stylesheet" href="../assets/css/maicons.css">

  <link rel="stylesheet" href="../assets/vendor/animate/animate.css">

  <link rel="stylesheet" href="../assets/vendor/owl-carousel/css/owl.carousel.min.css">

  <link rel="stylesheet" href="../assets/css/bootstrap.css">

  <link rel="stylesheet" href="../assets/css/mobster.css">

  <link rel="stylesheet" href="../login.css">

</head>

<body>
  <%- include("partials/header", {}); %>

  <p><b><b></p>

    <div class="page-hero-section bg-image hero-mini" style="background-image: url(../assets/img/hero_mini.svg);">
      <div class="hero-caption pt-5">
        <div class="container h-100">
          <div class="row align-items-center h-100">
            <div class="col-lg-6 wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
              <div class="card-page mt-3">
                <h3 class="mb-3">Viewing: <%= data.name %></h3>

                <form id="contact-form" method="POST" action="/friendRequest">
               <button class="btn btn-primary rounded-pill" name="name" value=<%= data.name %>>Add Friend</button>

               </form>

                <p><b>Games played: <%= data.total %> <b></p>
                  <p><b>Games Won:<%= data.wins %> <b></p>

                    <p><b>Match history<b></p>
                         <ul>
                      <% for(var i = 0; i < data.games_played.length; i++){ %>
                      <li><a href="url"><%= data.games_played[i] %></a></li>
                      <% } %>
  </ul>
                    <p><b>Active Games Click to View</p>


                       <ul>
                        <% for(var i = 0; i < JSON.stringify(data.games_active.length); i++){ %>
                        <li><a href="url"><%=  data.games_active[i].name  %></a></li>
                        <% } %>

                      </ul>
                  </div>
               </div>
             </div>
          </div>
        </div>
      </div>






</body>

</html>
